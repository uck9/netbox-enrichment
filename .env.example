# Environment
APP_ENV=development
APP_HOST=127.0.0.1
APP_PORT=8010
REGION=ap-southeast-2

# Global IP allowlist (optional, comma-separated CIDRs)
APP_GLOBAL_ALLOWLIST=10.0.0.0/8

# NetBox
NETBOX_BASE_URL=https://netbox.example.com
NETBOX_VERIFY_SSL=false

# Development: use direct token
NETBOX_API_TOKEN=nbx_DEVELOPMENT_TOKEN_VALUE

# Production: store only the secret name (Secrets Manager must contain `TOKEN:<value>`)
NETBOX_API_TOKEN__SECRET_NAME=prod/netbox/api_token

# Email / reporting
SES_FROM=netbox-enrich@example.com
SES_TO=netops@example.com,secops@example.com
EMAIL_TOP_N=30

# Development: direct role ARN
SES_ROLE_ARN=arn:aws:iam::123456789012:role/ses-sender

# Production: SSM parameter name that holds the role ARN
SES_ROLE_ARN__PARAM_NAME=/prod/ses/assume_role_arn

# Cache / policy
CACHE_TTL_HOURS=24
RETENTION_DAYS=90
REFRESH_CRON_HOUR=2
REPORT_CRON_HOUR=3

# AWS Variables Cache
SECRETS_CACHE_TTL_MIN=360
PARAMS_CACHE_TTL_MIN=360
STS_CACHE_SAFETY_MIN=5
